# Application Environment
NODE_ENV=development
PORT=2000

# MongoDB Configuration
# Local: mongodb://admin:admin123@localhost:27017/teamhub?authSource=admin
# Docker: mongodb://admin:admin123@mongo:27017/teamhub?authSource=admin
# Production: mongodb://user:password@your-mongo-host:27017/teamhub?authSource=admin
# MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/teamhub
MONGODB_URI=mongodb://admin:admin123@localhost:27017/teamhub?authSource=admin

# Redis Configuration
# Local: localhost
# Docker: redis
# Production: your-redis-host
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
# Generate strong secrets for production:
# openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Storage
# Set to false to use S3, true for local storage
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# AWS S3 Configuration (for production)
# Leave empty if using local storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
S3_ENDPOINT=  # Optional: for S3-compatible services (e.g., DigitalOcean Spaces)

# Application URLs
# Development
APP_URL=http://localhost:5173
API_URL=http://localhost:2000

# Production (update these)
# APP_URL=https://yourdomain.com
# API_URL=https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email Configuration (for notifications and verification)
# Gmail example:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@teamhub.com

# SendGrid example:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=SG.your-sendgrid-api-key
# EMAIL_FROM=noreply@teamhub.com

# AWS SES example:
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-aws-smtp-username
# SMTP_PASS=your-aws-smtp-password
# EMAIL_FROM=noreply@teamhub.com
